<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource"
    android:background="?attr/colorSecondary">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/back_button_settings_activity"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="@dimen/header_text"
            style="@style/text_header"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginTop="21dp"
            android:text="@string/dark_theme"
            style="@style/primary_text" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/theme_switcher"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="10dp"
            style="@style/my_switch"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:id="@+id/share_button">

        <TextView
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginTop="21dp"
            android:text="@string/share_app"
            style="@style/primary_text"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="22dp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:id="@+id/write_to_support_button">

        <TextView
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginTop="21dp"
            android:text="@string/mail_support"
            style="@style/primary_text"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/earphones"
            android:layout_gravity="end"
            android:paddingTop="22.1dp"
            android:paddingEnd="14dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hair"
            android:layout_gravity="end"
            android:paddingTop="25.1dp"
            android:paddingEnd="18dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/eye"
            android:layout_gravity="end"
            android:paddingTop="31.1dp"
            android:paddingEnd="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/eye"
            android:layout_gravity="end"
            android:paddingTop="31.1dp"
            android:paddingEnd="26dp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:id="@+id/user_agreement_button">

        <TextView
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginTop="21dp"
            android:text="@string/terms_of_use"
            style="@style/primary_text"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_forward"
            android:layout_gravity="end"
            android:paddingEnd="20dp"
            android:paddingTop="24dp" />

    </FrameLayout>

