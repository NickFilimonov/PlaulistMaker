<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/back_button"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            style="@style/VectorColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"
            android:text="@string/settings"
            android:textSize="@dimen/header_text"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="64dp"
            style="@style/SettingsTextColor"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="24dp">

        <TextView
            android:text="@string/dark_theme"
            style="@style/SettingsTextStyle" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="10dp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="61dp">

        <TextView
            android:text="@string/share_app"
            style="@style/SettingsTextStyle"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="22dp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="61dp">

        <TextView
            android:text="@string/mail_support"
            style="@style/SettingsTextStyle"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/earphones"
            android:layout_gravity="end"
            android:paddingTop="22.1dp"
            android:paddingEnd="14dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hair"
            android:layout_gravity="end"
            android:paddingTop="25.1dp"
            android:paddingEnd="18dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/eye"
            android:layout_gravity="end"
            android:paddingTop="31.1dp"
            android:paddingEnd="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/eye"
            android:layout_gravity="end"
            android:paddingTop="31.1dp"
            android:paddingEnd="26dp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="61dp">

        <TextView
            android:text="@string/terms_of_use"
            style="@style/SettingsTextStyle"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_forward"
            android:layout_gravity="end"
            android:paddingEnd="20dp"
            android:paddingTop="24dp" />

    </FrameLayout>

</LinearLayout>
