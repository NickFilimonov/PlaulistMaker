<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="main_activity_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:insetTop">0dp</item> //несмотря на то, что  стиль кнопок унаследован от UnelevatedButton,
        <item name="android:insetBottom">0dp</item> // без этих атрибутов у кнопки появляются отсутпы от границ View сверху и снизу
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@color/PM_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/header_text</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/PM_black</item>
    </style>

    <style name="primary_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/primary_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" >400</item>
    </style>

    <style name="change_activity_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="iconGravity">textTop</item>
        <item name="iconPadding">2dp</item>
        <item name="background">@drawable/shape_line_search</item>
    </style>

    <style name="text_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/header_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="my_switch">
        <item name="trackTint">@color/PM_light_gray</item>
        <item name="thumbTint">@color/PM_gray</item>
    </style>

</resources>